
 <div class="container">
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">Sign Up</div>
                    </div>

                    <div style="padding-top:30px" class="panel-body" >

                        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>


                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= devise_error_messages! %>


                            <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input id="user_name" type="name" class="form-control" name="user[name]" value="" placeholder="name">
                                    <!--  <#%= f.email_field :email, class: "form_control" %> -->

                            </div>

                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <input id="user_email" type="email" class="form-control" name="user[email]" value="" placeholder="email">
                                        <!--  <#%= f.email_field :email, class: "form_control" %> -->

                                    </div>

                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                       <!--  <input id="user_password" type="password" class="form-control" name="user[password]" placeholder="8 characters minimum"> -->
                                       <% if @validatable %>
                                    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "8 characters minimum" %>
                                        <% end %>
                                    </div>

                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "confirm password" %>
                                    </div>

                                <div style="margin-top:10px" class="form-group">
                                    <div class="col-sm-12 controls action">
                                      <%= f.submit "Sign up", class:  "btn btn-success", style: "display: center;" %>
                                      <% end %>
                                    </div>
                                </div>

                            </form>

                        </div>
                    </div>
        </div>

</div>












