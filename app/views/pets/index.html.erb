<h1>Listing Pets</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <% @animals.collect do |animal| %>
<table>
    <tr>
      <td>name:<%= animal.name %></td>
      <td>size:<%= animal.size %></td>
      <td>breed: <%= animal.breeds.join %></td>
      <td>age: <%= animal.age %></td>
      <td>sex: <%= animal.sex %></td>
      <td>city: <%= animal.city.join %> </td>
      <td><%= animal.contact %></td>
      <td><%= animal.description %></td>
    </tr>
    <tr>
      <td>Eve</td>
      <td>Jackson</td>
      <td>94</td>
    </tr>
  </table>
  <%end%>



